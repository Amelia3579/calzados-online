<h1>Shopping Cart</h1>

<div class="cardContainer">
  {{#each products}}
    <div class="card">
      <p> Product: {{this.product.title}}</p>
      <p> Quantity: {{this.quantity}}</p>
      <p> Price: ${{this.product.price}}</p>

     <button onclick="removeProduct(`{{../cartId}}`, `{{this.product._id}}`)"
                class="btnAdd">Remove Product</button>  
    </div>
  {{/each}}

  <div>
    <button onclick="emptyCart(`{{cartId}}`)"> Empty Cart </button>
    <p> Total Purchase: ${{totalPurchase}} </p>
  </div>
</div>

<script src="/js/cart.js"></script> 


