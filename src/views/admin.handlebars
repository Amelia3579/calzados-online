<h1> Registered Users</h1>

<div class="backgroundContainer adminContainer">
  {{#each users}}

    <ul class="ul">
      <li class="li">
        <p class="pStyles">{{this.first_name}} {{this.last_name}}</p>
        <p class="pStyles"> {{this.email}} </p>
        <p class="pStyles" id="role-{{this._id}}">{{this.role}}</p>
        <p class="pStyles">{{this.last_connection}}</p>

        <div class="btnProfile">
          <button
            onclick="changeUserRole(`{{this._id}}`)"
            class="btnCart"
          >Change Role</button>
          <button onclick="removeUser(`{{this._id}}`)" class="btnCart">Remove
            User</button>
        </div>
      </li>
    </ul>
  {{/each}}
</div>

<h1>Upload Documents</h1>
<form
  id="uploadForm"
  enctype="multipart/form-data"
  method="POST"
  class="backgroundContainer"
>

  <label for="documents">Documents:</label>
  <label for="documents" class="custom-file-upload">Select Documents</label>
  <input type="file" name="documents" id="documents" multiple />

  <label for="products">Products:</label>
  <label for="products" class="custom-file-upload">Select Products</label>
  <input type="file" name="products" id="products" multiple />

  <label for="profile">Profile:</label>
  <label for="profile" class="custom-file-upload">Select Profile</label>
  <input type="file" name="profile" id="profile" multiple />

  <button type="submit" class="btnUser">Upload Documents</button>
</form>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/user.js"></script>