{{#if user}}
  <header>
    <p> Bienvenido {{ user.first_name }} {{user.last_name}}</p>
    <p> Role: {{user.role}} </p>
    <a href="/api/sessions/logout"> Close Session </a>
  </header>

{{/if}}


<hr />

{{! Actividad desafío4 (Websockets) }}
<h1>Productos disponibles para la venta</h1>

<div class="cardContainer">
  {{#each products}}
    <div class="card">
      <p>{{this.title}}</p>
      <p>{{this.description}}</p>
      <p>${{this.price}}</p>

      <button class="btnAgregar" data-product-id="{{this._id}}">
        Agregar al Carrito
      </button>
    </div>
  {{/each}}
</div>

{{! Actividad 2° pre-entrega }}
{{#if hasPrevPage}}
  <a href="/products?page={{prevPage}}"> Anterior </a>
{{/if}}

{{#if hasNextPage}}
  <a href="/products?page={{nextPage}}"> Siguiente </a>
{{/if}}

<p> Página {{currentPage}} de {{totalPages}} </p>

<script src="https://cdn.socket.io/4.7.4/socket.io.min.js"></script>
<script src="js/main.js"></script>